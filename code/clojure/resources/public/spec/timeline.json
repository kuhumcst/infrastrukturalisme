{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A timeline for Hjelmslev's activities.",
  "width": 800,
  "height": 200,
  "padding": 10,
  "autosize": "pad",
  "data": [
    {
      "name": "hjelmslev",
      "url": "https://raw.githubusercontent.com/SofieVonge/infrastrukturalisme/master/data/timeline/hjelmslev.json",
      "format": {
        "type": "json",
        "parse": {
          "Startdato": "date:'%d-%m-%Y'",
          "Slutdato": "date:'%d-%m-%Y'"
        }
      },
      "transform": [
        {
          "type": "formula",
          "expr": "datum.Kategori === 'Rejse' ? 0 : 1",
          "as": "sorting"
        }
      ]
    },
    {
      "name": "initValues",
      "format": {
        "type": "json",
        "parse": {
          "initRange": "date"
        }
      },
      "values": [
        {
          "initRange": -1262304000000
        },
        {
          "initRange": -1136073600000
        }
      ],
      "transform": [
        {
          "type": "extent",
          "field": "initRange",
          "signal": "xext"
        }
      ]
    },
    {
      "name": "selected",
      "on": [
        {
          "trigger": "clear",
          "remove": true
        },
        {
          "trigger": "!shift",
          "remove": true
        },
        {
          "trigger": "!shift && clicked",
          "insert": "clicked"
        },
        {
          "trigger": "shift && clicked",
          "toggle": "clicked"
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "path",
      "value": "M0 -50 H 800 V 200 H0"
    },
    {
      "name": "clear",
      "value": true,
      "on": [
        {
          "events": "dblclick[!event.item]",
          "update": "true",
          "force": true
        }
      ]
    },
    {
      "name": "shift",
      "value": false,
      "on": [
        {
          "events": "@legendSymbol:click, @legendLabel:click",
          "update": "event.shiftKey",
          "force": true
        }
      ]
    },
    {
      "name": "clicked",
      "value": null,
      "on": [
        {
          "events": "@legendSymbol:click, @legendLabel:click",
          "update": "{value: datum.value}",
          "force": true
        }
      ]
    },
    {
      "name": "down",
      "value": null,
      "on": [
        {
          "events": "mousedown",
          "update": "xy()"
        }
      ]
    },
    {
      "name": "xcur",
      "value": null,
      "on": [
        {
          "events": "mousedown",
          "update": "slice(xdom)"
        }
      ]
    },
    {
      "name": "delta",
      "value": [
        0,
        0
      ],
      "on": [
        {
          "events": [
            {
              "source": "window",
              "type": "mousemove",
              "filter": "!event.shiftKey",
              "consume": true,
              "between": [
                {
                  "type": "mousedown",
                  "filter": "!event.shiftKey"
                },
                {
                  "source": "window",
                  "type": "mouseup"
                }
              ]
            }
          ],
          "update": "down ? [down[0]-x(), y()-down[1]] : [0,0]"
        }
      ]
    },
    {
      "name": "xdom",
      "update": "slice(xext)",
      "on": [
        {
          "events": "dblclick",
          "update": "slice(xext)"
        },
        {
          "events": {
            "signal": "delta"
          },
          "update": "[xcur[0] + span(xcur) * delta[0] / width, xcur[1] + span(xcur) * delta[0] / width]"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "yscale",
      "type": "band",
      "range": "height",
      "domain": {
        "data": "hjelmslev",
        "field": "Kategori",
        "sort": {
          "op": "min",
          "field": "sorting"
        }
      }
    },
    {
      "name": "xscale",
      "type": "time",
      "padding": 0.5,
      "domain": {
        "signal": "xdom"
      },
      "range": "width"
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": {
        "scheme": "category20"
      },
      "domain": {
        "data": "hjelmslev",
        "field": "Kategori"
      }
    }
  ],
  "axes": [
    {
      "orient": "bottom",
      "scale": "xscale",
      "format": "%m.%Y",
      "labelAngle": -40,
      "labelPadding": 9
    },
    {
      "orient": "left",
      "scale": "yscale",
      "grid": true,
      "encode": {
        "labels": {
          "enter": {
            "fill": {
              "signal": "scale('color', datum.value)"
            }
          }
        }
      }
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "symbolType": "stroke",
      "direction": "horizontal",
      "orient": "top",
      "offset": 80,
      "encode": {
        "symbols": {
          "name": "legendSymbol",
          "interactive": true,
          "update": {
            "opacity": [
              {
                "test": "!length(data('selected')) || indata('selected', 'value', datum.value)",
                "value": 1
              },
              {
                "value": 0.25
              }
            ]
          }
        },
        "labels": {
          "name": "legendLabel",
          "interactive": true,
          "update": {
            "opacity": [
              {
                "test": "!length(data('selected')) || indata('selected', 'value', datum.value)",
                "value": 1
              },
              {
                "value": 0.25
              }
            ]
          }
        }
      }
    }
  ],
  "marks": [
    {
      "type": "path",
      "encode": {
        "update": {
          "fill": {
            "value": "purple"
          },
          "path": {
            "signal": "null"
          }
        }
      }
    },
    {
      "type": "text",
      "from": {
        "data": "hjelmslev"
      },
      "zindex": 99,
      "clip": {
        "path": "M0 -50 H 800 V 200 H0"
      },
      "encode": {
        "update": {
          "x": {
            "scale": "xscale",
            "field": "Startdato",
            "offset": 5.5
          },
          "y": {
            "field": "Kategori",
            "scale": "yscale",
            "offset": 3
          },
          "angle": {
            "value": -60
          },
          "text": {
            "field": "Event"
          },
          "limit": {
            "value": 50
          },
          "tooltip": [
            {
              "test": "(!length(data('selected')) || indata('selected', 'value', datum.Kategori))",
              "signal": "datum.Tooltip"
            }
          ],
          "opacity": [
            {
              "test": "(!length(data('selected')) || indata('selected', 'value', datum.Kategori))",
              "value": 1
            },
            {
              "value": 0
            }
          ]
        }
      }
    },
    {
      "type": "symbol",
      "from": {
        "data": "hjelmslev"
      },
      "clip": true,
      "zindex": 80,
      "encode": {
        "update": {
          "x": {
            "scale": "xscale",
            "field": "Startdato"
          },
          "y": {
            "scale": "yscale",
            "field": "Kategori",
            "offset": 6
          },
          "fill": {
            "scale": "color",
            "field": "Kategori"
          },
          "tooltip": [
            {
              "test": "(!length(data('selected')) || indata('selected', 'value', datum.Kategori))",
              "signal": "'Land: ' + datum.Land"
            }
          ],
          "opacity": [
            {
              "test": "(!length(data('selected')) || indata('selected', 'value', datum.Kategori))",
              "value": 1
            },
            {
              "value": 0
            }
          ]
        }
      }
    },
    {
      "type": "rect",
      "from": {
        "data": "hjelmslev"
      },
      "zindex": 1,
      "clip": true,
      "encode": {
        "enter": {
          "y": {
            "scale": "yscale",
            "field": "Kategori",
            "offset": 4
          },
          "height": {
            "value": 4
          },
          "fill": {
            "scale": "color",
            "field": "Kategori"
          }
        },
        "update": {
          "x": {
            "scale": "xscale",
            "field": "Startdato"
          },
          "x2": {
            "scale": "xscale",
            "field": "Slutdato"
          },
          "tooltip": [
            {
              "test": "(!length(data('selected')) || indata('selected', 'value', datum.Kategori))",
              "signal": "'Land: ' + datum.Land"
            }
          ],
          "opacity": [
            {
              "test": "(!length(data('selected')) || indata('selected', 'value', datum.Kategori))",
              "value": 1
            },
            {
              "value": 0
            }
          ]
        }
      }
    }
  ],
  "config": {}
}